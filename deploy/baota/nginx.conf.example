# 将此内容放入宝塔站点的 Nginx 配置中，并根据你的域名与端口调整。

server {
    listen 80;
    server_name example.com;

    # 若使用 HTTPS，请在宝塔申请证书并将 listen 443/ssl 配置好

    location / {
        proxy_pass http://127.0.0.1:3000; # 修改为 PM2 实际监听端口
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # 可选：为静态资源设置长缓存（如果你选择由 Nginx 直接托管静态资源）
    # location ~* \.(css|js|png|jpg|jpeg|svg|ico)$ {
    #     root /www/wwwroot/crevas-ai; # 指向项目目录
    #     access_log off;
    #     expires 30d;
    #     add_header Cache-Control "public, max-age=2592000, immutable";
    # }

    # 健康检查（可用于监控）
    location = /healthz {
        proxy_pass http://127.0.0.1:3000/healthz;
    }
}
